<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail_view.MovieDetailView">

    <ImageView
        android:id="@+id/iv_poster_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"

        android:src="@drawable/poster_a_start_is_born"
        app:layout_constraintBottom_toTopOf="@+id/tv_movie_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="8dp"
        android:text="asdasd"
        android:textColor="@color/black"
        android:textSize="32sp"

        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@id/tv_movie_popularity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_poster_image" />

    <ImageView
        android:id="@+id/iv_fav_button"
        android:layout_width="32dp"
        android:layout_height="32dp"

        android:src="@drawable/ic_favorite_border_red_24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_title"
        app:layout_constraintBottom_toTopOf="@id/tv_movie_popularity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_movie_popularity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/iv_fav_button"
        app:layout_constraintBottom_toTopOf="@id/tv_movie_description"
        app:layout_constraintEnd_toStartOf="@id/tv_movie_year"

        android:text="12"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_movie_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"

        app:layout_constraintTop_toBottomOf="@id/tv_movie_title"
        app:layout_constraintBottom_toTopOf="@id/tv_movie_description"
        app:layout_constraintStart_toEndOf="@id/tv_movie_popularity"

        android:text="Year"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_movie_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:scrollbars="vertical"
        android:text="asdasdasd"
        android:textColor="@color/black"

        app:layout_constraintTop_toBottomOf="@id/tv_movie_year"
        />

</androidx.constraintlayout.widget.ConstraintLayout>